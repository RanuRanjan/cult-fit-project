size= ["s","m","xl"]

for(var i=0;i<size.length;i++){
    var size_div = document.createelemnt("div")
    var btn = doc.createle("button")
    btn.textconten = size[i]
    size_div.append(btn)
    size.addeventlistern("click",function(){
        as soon as user click any of the div, this function shud appply border =1px;
    })
}

