    var flag = false;
    var size = document.getElementnbyClass("Div");
    
    for(var i=0;i<size.length;i++){
        this for will check if any of the border is 1px or not 
        if 1 px then flag =true; , them break the for loop
    }
    if(flag){
        document.joh aage karna hai
    }else{
